<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.PostMapper">

    <!-- 结果映射 -->
    <resultMap id="PostResultMap" type="com.example.demo.pojo.Post">
        <id column="post_id" property="postId"/>
        <result column="user_id" property="userId"/>
        <result column="book_id" property="bookID"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="post_img" property="postImg"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 插入帖子 -->
    <insert id="insertPost" parameterType="com.example.demo.pojo.Post" useGeneratedKeys="true" keyProperty="postId">
        INSERT INTO post (
            user_id, book_id, title, content, post_img
        ) VALUES (
                     #{userId}, #{bookID}, #{title}, #{content}, #{postImg}
                 )
    </insert>

    <!-- 根据图书ID查询所有帖子 -->
    <select id="selectPostsByBookId" resultMap="PostResultMap">
        SELECT * FROM post
        WHERE book_id = #{bookId}
        ORDER BY create_time DESC
    </select>

    <!-- 根据帖子ID删除帖子 -->
    <delete id="deletePostById">
        DELETE FROM post
        WHERE post_id = #{postId}
    </delete>

    <!-- 更新帖子内容 -->
    <update id="updatePost" parameterType="com.example.demo.pojo.Post">
        UPDATE post
        <set>
            <if test="title != null and !title.isEmpty()">title = #{title},</if>
            <if test="content != null and !content.isEmpty()">content = #{content},</if>
            <if test="postImg != null and !postImg.isEmpty()">post_img = #{PostImg},</if>
            <if test="updateTime != null">update_time = #{updateTime}</if>
        </set>
        WHERE post_id = #{postId}
    </update>

    <!-- 根据帖子ID查询单个帖子 -->
    <select id="selectPostById" resultMap="PostResultMap">
        SELECT * FROM post
        WHERE post_id = #{postId}
    </select>

    <!-- 多条件搜索帖子 -->
    <select id="searchPosts" resultMap="PostResultMap">
        SELECT * FROM post
        <where>
            <if test="postId != 0">
                AND post_id = #{postId}
            </if>
            <if test="userId != 0">
                AND user_id = #{userId}
            </if>
            <if test="bookID != 0">
                AND book_id = #{bookID}
            </if>
            <if test="title != null and !title.isEmpty()">
                AND title LIKE CONCAT('%', #{title}, '%')
            </if>
            <if test="content != null and !content.isEmpty()">
                AND content LIKE CONCAT('%', #{content}, '%')
            </if>
        </where>
    </select>

    <select id="selectPostsByPage" resultMap="PostResultMap">
        SELECT * FROM post
        ORDER BY create_time DESC
        LIMIT #{start}, #{pageSize}
    </select>

</mapper>